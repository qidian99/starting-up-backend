{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Game"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "default": "Simple Game"
    },
    "numPlayers": {
      "type": "integer",
      "default": 1
    },
    "started": {
      "type": "boolean",
      "default": false
    },
    "width": {
      "type": "integer",
      "default": 9,
      "max": 100,
      "min": 1
    },
    "height": {
      "type": "integer",
      "default": 9,
      "max": 100,
      "min": 1
    },
    "update": {
      "type": "dynamiczone",
      "components": [
        "game.game-update",
        "game.region-update"
      ]
    },
    "regions": {
      "collection": "region",
      "via": "game"
    }
  }
}
