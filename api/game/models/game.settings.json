{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Game"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "default": "Simple Game"
    },
    "numPlayers": {
      "type": "integer"
    },
    "users": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "game"
    },
    "started": {
      "type": "boolean",
      "default": false
    }
  }
}
